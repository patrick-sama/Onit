@model Onit.Models.CustomArriviViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Arrivi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("SaveArrivi", "Arrivis", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Identificativo" class="control-label"></label>
                <input asp-for="Identificativo" class="form-control" />
                <span asp-validation-for="Identificativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descrizione" class="control-label"></label>
                <input asp-for="Descrizione" class="form-control" />
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatricolaCarello" class="control-label"></label>
                <input asp-for="MatricolaCarello" class="form-control" />
                <span asp-validation-for="MatricolaCarello" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaId" class="control-label"></label>
                <select asp-for="AreaId" class="form-control" asp-items="ViewBag.AreaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CodiceLocazione" class="control-label"></label>
                <input asp-for="CodiceLocazione" class="form-control" />
                <span asp-validation-for="CodiceLocazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-block  btn-primary" type="submit" value="Submit" />
            </div>
        }
        <button style="margin-right:10px" class="btn btn-primary pull-right" onclick="addNewOrder()">Nuovo arrivo</button>
        @*Detagli Carello*@
        <div class="modal fade" id="newOrderModal">
            <div class="modal-dialog modal-lg" style=" width: 900px !important;">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                        <h4>Inserimento Componenti Del Carello</h4>
                    </div>
                    <form id="NewOrderForm">
                        <div class="modal-body">

                            <h5 style="margin-top:10px;color:#ff6347">Detagli Carello</h5>
                            <hr />
                            <div class="form-horizontal">
                                <input type="hidden" id="ComponenteId" />
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Codice Componente
                                    </label>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <select id="ComponenteCodice" name="ComponenteCodice" class="form-control" asp-items="ViewBag.ComponenteId">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Quantity
                                    </label>
                                    <div class="col-md-4">
                                        <input type="number" id="quantity" name="quantity" placeholder="Quantity" class="form-control" />
                                    </div>
                                    <div class="col-md-2 col-lg-offset-4">
                                        <a id="addToList" class="btn btn-primary">Add To List</a>
                                    </div>
                                </div>

                                <table id="detailsTable" class="table">
                                    <thead>
                                        <tr>
                                            <th style="width:45%">Componente</th>
                                            <th style="width:30%">Quantity</th>
                                            <th style="width:10%"></th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="reset" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button id="saveOrder" type="button" class="btn btn-danger">Save Order</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


