@model Onit.Models.ComponenteDelCarello

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddComponente" onsubmit="return ajaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ComponenteId" class="control-label"></label>
                <select asp-for="ComponenteId" class="form-control" asp-items="ViewBag.ComponenteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CarelloId" class="form-control" value="@ViewBag.idCarello" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


