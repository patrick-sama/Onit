@model IEnumerable<Onit.Models.Arrivi>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="InserimentoArrivo">Nuovo Arrivo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Identificativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descrizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carello)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locazione)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Identificativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descrizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carello.Matricola)
            </td>
            <td>
                Locazione  @Html.DisplayFor(modelItem => item.Locazione.Codice) area @Html.DisplayFor(modelItem => item.Locazione.Area.Codice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { CarelloId = item.CarelloId, LocazioneId = item.LocazioneId }, "") |
                @Html.ActionLink("Details", "Details", new { CarelloId = item.CarelloId, LocazioneId = item.LocazioneId }) |
                @Html.ActionLink("Delete", "Delete", new { CarelloId = item.CarelloId, LocazioneId = item.LocazioneId }) |
            </td>
        </tr>
}
    </tbody>
</table>

